<vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:width="108dp"
    android:height="108dp"
    android:viewportWidth="108"
    android:viewportHeight="108">

    <!-- Glow Background -->
    <path android:pathData="M54,10c-24,0 -44,20 -44,44s20,44 44,44 44,-20 44,-44 -20,-44 -44,-44z">
        <aapt:attr name="android:fillColor">
            <gradient
                android:type="radial"
                android:gradientRadius="48"
                android:centerX="54"
                android:centerY="54">
                <item android:offset="0.0" android:color="#44229DFF"/>
                <item android:offset="1.0" android:color="#00229DFF"/>
            </gradient>
        </aapt:attr>
    </path>

    <!-- Blue Elegant Lightning -->
    <path
        android:pathData="M58,18 L32,60 H50 L40,90 L78,44 H60 L70,18 Z"
        android:fillType="nonZero">
        <aapt:attr name="android:fillColor">
            <gradient
                android:startX="32"
                android:startY="18"
                android:endX="78"
                android:endY="90"
                android:type="linear">
                <item android:offset="0.0" android:color="#66A7D7FF"/>
                <item android:offset="0.5" android:color="#CC1A73FF"/>
                <item android:offset="1.0" android:color="#FF007BFF"/>
            </gradient>
        </aapt:attr>
    </path>

    <!-- Lightning Outline Glow -->
    <path
        android:pathData="M58,18 L32,60 H50 L40,90 L78,44 H60 L70,18 Z"
        android:strokeWidth="3"
        android:strokeColor="#88A7D7FF"
        android:fillColor="#00000000"/>
</vector>
